<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/theme_primary_500</item>
        <item name="colorPrimaryDark">@color/theme_primary_800</item>
        <item name="colorAccent">@color/theme_accent_700</item>
        <item name="android:textColorPrimary">@color/theme_text_primary</item>
        <item name="android:textColor">@color/theme_text_secondary</item>
        <item name="android:textColorSecondary">@color/theme_text_secondary</item>
        <item name="android:windowBackground">@color/theme_window_background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorHint">@color/theme_text_secondary</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:textColorPrimary">@color/theme_text_white</item>
        <item name="android:textColorPrimaryInverse">@color/theme_text_white</item>
        <item name="android:textColorSecondary">@color/theme_text_white</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/theme_accent_700</item>
        <!-- Note: in design support library ver. 22.2.0, when we use both tabBackground & tabIndicatorColor, we cannot see indicator :( -->
        <!-- Note: so, you should use android:background attr rather than tabBackground. -->
        <!-- @see: http://stackoverflow.com/questions/30796003/unable-to-see-tab-indicator-in-tablayout-design-support-library -->
        <!--<item name="tabBackground">@color/theme_primary_500</item>-->
        <item name="android:background">@color/theme_primary_500</item>
        <item name="tabSelectedTextColor">@color/theme_text_white</item>
    </style>
</resources>
